<h1>Enter your workout details</h1>

<%= simple_form_for @workout do |f| %>
  <%= f.input :date %>
  <br />
  <%= f.input :activity, input_html: { class: 'form-control' } %>
  <%= f.input :mood, input_html: { class: 'form-control' } %>
  <%= f.input :duration, input_html: { class: 'form-control' } %>
  <br />
  <%= f.submit 'Create', class: 'btn btn-primary' %>
<% end %>