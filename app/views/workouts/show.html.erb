<div id="show">

  <div>
    <h2><%= @workout.activity %></h2>
    <p><%= @workout.date.strftime("%A, %B %d") %></p>
    <p><span>feeling:</span> <%= @workout.mood %></p>
    <p><span>length:</span> <%= @workout.duration %></p>
    <br />
    <%= link_to 'Edit', edit_workout_path(@workout), class: 'btn btn-warning btn-sm' %>
    <%= link_to 'Delete', workout_path(@workout), method: :delete, data: {confirm: 'Are you sure you want to delete this workout?'},class: 'btn btn-danger btn-sm' %>
  </div>


  <% if @workout.exercises.present? %>
    <hr />

    <h3>Exercises</h3>

    <% @workout.exercises.each do |exercise| %>
        <div>
          <p><span>name:</span> <%= exercise.name %></p>
          <p><span>sets:</span> <%= exercise.sets %></p>
          <p><span>reps:</span> <%= exercise.reps %></p>
          <p><span>weight:</span> <%= exercise.weight %></p>
          <p><span>distance:</span> <%= exercise.distance %></p>
          <br />
        </div>
    <% end %>

  <% end %>


<hr />

<h3>Add Exercise Details</h3>

<%= simple_form_for([@workout, @workout.exercises.build]) do |f| %>
  <%= f.input :name, input_html: { class: 'form-control' } %>
  <%= f.input :sets, input_html: { class: 'form-control' } %>
  <%= f.input :reps, input_html: { class: 'form-control' } %>
  <%= f.input :weight, input_html: { class: 'form-control' } %>
  <%= f.input :distance, input_html: { class: 'form-control' } %>
  <br />
  <%= f.submit 'Add', class: 'btn btn-warning btn-sm' %>
<% end %>



</div>